fn factorize(n) {
  fn f(fac, i) {
    if (i < 1 ) { return fac; }
    $f(fac * i, i - 1);
  }
  $f(1, n);
}

fn get_num() {
  let num = ask("Enter a number:");
  let int_num = int(num);
  if (!int_num) {
    say("Sorry, "+num+" is not a number.", "Try again!");
    $get_num();
  }
  int_num;
}

fn system_loop() {
  say(get_num() |> factorize());
  $system_loop();
}
system_loop();
